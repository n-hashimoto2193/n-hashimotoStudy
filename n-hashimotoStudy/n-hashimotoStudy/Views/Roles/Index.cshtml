@model IEnumerable<n_hashimotoStudy.Models.Role>

@{
    ViewData["Title"] = "権限マスター";
}

<h2>権限マスター</h2>

<p>
    <a asp-action="Create">新規登録</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoleName)
                </th>
            <th></th>
        </tr>
    </thead>
