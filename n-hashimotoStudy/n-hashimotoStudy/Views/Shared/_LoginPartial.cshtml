@using Microsoft.AspNetCore.Identity
@using n_hashimotoStudy.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="MasterMainte" asp-action="Index" title="MasterMainte">マスターメンテ</a>
            </li>

            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">こんにちは @UserManager.GetUserName(User)! さん</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">ログアウト</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">ユーザー登録</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">ログイン</a></li>
    </ul>
}
